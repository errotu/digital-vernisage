<?xml version='1.0' encoding='utf-8'?>
<widget index="com.errotu.wdcVernissage" version="1.0.0" versionCode="10">
    <name>Vernissage</name>
    <description>
        The Vernissage of WeeDooCare
    </description>
    <author email="erik.tuchtfeld@weedoocare.com" href="http://weedoocare.com">
        Erik Tuchtfeld - WeeDooCare
    </author>
    <content src="index.html"/>
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="android-minSdkVersion" value="14"/>
    <preference name="android-targetSdkVersion" value="25"/>
    <preference name="android-build-tool" value="gradle"/>
    <plugin name="cordova-plugin-device" source="npm" spec="~1.1.3"/>
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.2"/>
    <plugin name="cordova-plugin-statusbar" source="npm" spec="~2.2.0"/>
    <plugin name="phonegap-plugin-barcodescanner" source="npm" spec="~6.0.3">
        <param name="CAMERA_USAGE_DESCRIPTION" value="To scan barcodes"/>
    </plugin>
    <preference name="android-build-tool" value="gradle"/>
    <plugin name="cordova-plugin-splashscreen" source="npm" spec="~3.2.2"/>
    <plugin name="cordova-plugin-file" source="npm" spec="~4.3.0"/>
    <plugin name="cordova-plugin-file-transfer" source="npm" spec="~1.6.0"/>
    <plugin name="cordova-plugin-ios-camera-permissions" spec="~1.0.2"/>

    <splash src="res/splash.png"/>
    <platform name="android">
        <icon platform="android" density="ldpi" src="res/icons/android/icon-36-ldpi.png"/>
        <icon platform="android" density="mdpi" src="res/icons/android/icon-48-mdpi.png"/>
        <icon platform="android" density="hdpi" src="res/icons/android/icon-72-hdpi.png"/>
        <icon platform="android" density="xhdpi" src="res/icons/android/icon-96-xhdpi.png"/>
        <icon platform="android" density="xxhdpi" src="res/icons/android/icon-144-xxhdpi.png"/>
        <icon platform="android" density="xxxhdpi" src="res/icons/android/icon-192-xxxhdpi.png"/>

        <splash density="port-ldpi" src="res/screens/android/screen-ldpi-portrait.png"/>
        <splash density="port-mdpi" src="res/screens/android/screen-mdpi-portrait.png"/>
        <splash density="port-hdpi" src="res/screens/android/screen-hdpi-portrait.png"/>
        <splash density="port-xhdpi" src="res/screens/android/screen-xhdpi-portrait.png"/>
    </platform>
    <platform name="ios">
        <icon height="57" platform="ios" src="res/icons/ios/icon.png" width="57"/>
        <icon height="114" platform="ios" src="res/icons/ios/icon-2x.png" width="114"/>
        <icon height="40" platform="ios" src="res/icons/ios/icon-40.png" width="40"/>
        <icon height="80" platform="ios" src="res/icons/ios/icon-40-2x.png" width="80"/>
        <icon height="50" platform="ios" src="res/icons/ios/icon-50.png" width="50"/>
        <icon height="100" platform="ios" src="res/icons/ios/icon-50-2x.png" width="100"/>
        <icon height="60" platform="ios" src="res/icons/ios/icon-60.png" width="60"/>
        <icon height="120" platform="ios" src="res/icons/ios/icon-60-2x.png" width="120"/>
        <icon height="180" platform="ios" src="res/icons/ios/icon-60-3x.png" width="180"/>
        <icon height="72" platform="ios" src="res/icons/ios/icon-72.png" width="72"/>
        <icon height="144" platform="ios" src="res/icons/ios/icon-72-2x.png" width="144"/>
        <icon height="76" platform="ios" src="res/icons/ios/icon-76.png" width="76"/>
        <icon height="152" platform="ios" src="res/icons/ios/icon-76-2x.png" width="152"/>
        <icon height="29" platform="ios" src="res/icons/ios/icon-small.png" width="29"/>
        <icon height="58" platform="ios" src="res/icons/ios/icon-small-2x.png" width="58"/>
        <splash height="1024" platform="ios" src="res/screens/ios/screen-ipad-portrait.png" width="768"/>
        <splash height="2048" platform="ios" src="res/screens/ios/screen-ipad-portrait-2x.png" width="1536"/>
        <splash height="480" platform="ios" src="res/screens/ios/screen-iphone-portrait.png" width="320"/>
        <splash height="960" platform="ios" src="res/screens/ios/screen-iphone-portrait-2x.png" width="640"/>
        <splash height="1136" platform="ios" src="res/screens/ios/screen-iphone-portrait-568h-2x.png" width="640"/>
        <splash height="1334" platform="ios" src="res/screens/ios/screen-iphone-portrait-667h.png" width="750"/>
        <splash height="2208" platform="ios" src="res/screens/ios/screen-iphone-portrait-736h.png" width="1242"/>
    </platform>
    <platform name="wp8">
        <icon height="99" platform="wp8" src="res/icons/wp8/ApplicationIcon.png" width="99"/>
        <icon height="159" platform="wp8" src="res/icons/wp8/Background.png" width="159"/>
        <splash height="1024" platform="wp8" src="res/screens/wp8/SplashScreenImage.jpg" width="768"/>
    </platform>
    <platform name="windows">
        <icon height="150" platform="windows" src="res/icons/windows/logo.png" width="150"/>
        <icon height="30" platform="windows" src="res/icons/windows/smalllogo.png" width="30"/>
        <icon height="50" platform="windows" src="res/icons/windows/storelogo.png" width="50"/>
        <splash height="300" platform="windows" src="res/screens/windows/splashscreen.png" width="620"/>
    </platform>
    <access origin="https://weedocare.eknoes.de"/>
    <access origin="*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
        <allow-intent href="cdvfile://*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
        <preference name="iosPersistentFileLocation" value="Library"/>
    </platform>
    <allow-intent href="http://*"/>
    <allow-intent href="https://*"/>
    <allow-intent href="mailto://*"/>

    <engine name="android" spec="~5.1.1"/>
    <feature name="Device">
        <param name="ios-package" value="CDVDevice"/>
        <param name="android-package" value="org.apache.cordova.device.Device"/>
    </feature>
    <feature name="File">
        <param name="ios-package" value="CDVFile"/>
        <param name="android-package" value="org.apache.cordova.file.FileUtils"/>
    </feature>
    <feature name="FileTransfer">
        <param name="ios-package" value="CDVFileTransfer"/>
        <param name="android-package" value="org.apache.cordova.filetransfer.FileTransfer"/>
    </feature>

    <preference name="AutoHideSplashScreen" value="true"/>
    <preference name="FadeSplashScreen" value="false"/>
    <preference name="SplashScreenDelay" value="2000"/>
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <preference name="StatusBarBackgroundColor" value="#7cb342"/>
</widget>
